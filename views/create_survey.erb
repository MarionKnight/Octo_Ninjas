	<form id="form-create-survey" action='/create_survey' method="POST">
		Movie Title: <input type="text" name ="movie_title">
		<input type="submit" value ="submit">
	</form>

	<hr>

	<div id="movie-list-template">
		<p>First Movie:</p>

	</div>

	<% @my_movie_list.each do |movie| %>
	<%= movie.title %>
	<% end %>

